<div class="page-header">
  <%= link_to people_path, class: 'btn btn-default' do %>
    All People
  <% end %>
  <%= link_to edit_person_path(@person), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show person</h1>
</div>

<dl class="dl-horizontal">
  <dt>Project:</dt>
  <dd><%= @person.project %></dd>

  <dt>Name:</dt>
  <dd><%= @person.name %></dd>

  <dt>Email:</dt>
  <dd><%= @person.email %></dd>

  <dt>Score:</dt>
  <dd><%= @person.score %></dd>

</dl>
